<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    <key>CFBundleDisplayName</key>
    <string>Screen Actions</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>com.conornolan.Screen-Actions.ActionExtension</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>ScreenActionsActionExtension</string>
    <key>CFBundlePackageType</key>
    <string>XPC!</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Privacy usage strings shown if this extension requests access -->
    <key>NSCalendarsUsageDescription</key>
    <string>Screen Actions needs access to your calendars to add events detected from selected text.</string>
    <key>NSRemindersUsageDescription</key>
    <string>Screen Actions needs access to your reminders to save tasks detected from selected text.</string>
    <key>NSContactsUsageDescription</key>
    <string>Screen Actions needs access to your contacts to save names, emails, and phone numbers detected in text.</string>

    <key>NSExtension</key>
    <dict>
        <key>NSExtensionAttributes</key>
        <dict>
            <!-- Make it appear for selected text in Safari and for web pages/URLs -->
            <key>NSExtensionActivationRule</key>
            <dict>
                <key>NSExtensionActivationSupportsText</key>
                <true/>
                <key>NSExtensionActivationSupportsWebPageWithMaxCount</key>
                <integer>1</integer>
                <key>NSExtensionActivationSupportsWebURLWithMaxCount</key>
                <integer>1</integer>
            </dict>
            <!-- JS runs in the page to pull the current selection/title/URL -->
            <key>NSExtensionJavaScriptPreprocessingFile</key>
            <string>GetSelection</string>
        </dict>
        <key>NSExtensionPointIdentifier</key>
        <string>com.apple.ui-services</string>
        <key>NSExtensionPrincipalClass</key>
        <string>$(PRODUCT_MODULE_NAME).ActionViewController</string>
    </dict>
</dict>
</plist>
